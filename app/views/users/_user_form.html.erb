<%= form_for @user do |f| %>

	<ul> 
		<% @user.errors.full_messages.each do |message|%> 
			<li> <%= message %> </li>
		<% end %>
	</ul>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</p>
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</p>

  <%= f.submit "Submit" %>
  
  <%= link_to %>
<% end %>
