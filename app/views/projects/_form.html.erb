<%= form_for :project, url: projects_path do |f| %>
	
	<ul> 
		<% @project.errors.full_messages.each do |message|%> 
			<li> <%= message %> </li>
		<% end %>
	</ul>
	
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>	
	
	<p>
		<%= f.label :link %>
		<%= f.text_field :link %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_area :description%>
	</p>

	<p>
		<%= f.submit "Submit"%>
	</p>

<% end %>