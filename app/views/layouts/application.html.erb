<!DOCTYPE html>
<html>
<head>
  <title>VRBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<h1 class="unauthorized"> <%= flash[:alert] %> </h1>

<%= display_login_link %>


<% if current_user%>
	<%= current_user.name %>
	<%= current_user.id %>
<% end %>

<%= yield %>

 <%= current_user.id unless current_user.nil? %>

<p> <%= link_to "HOME", root_url%> </p>
</body>
</html>
